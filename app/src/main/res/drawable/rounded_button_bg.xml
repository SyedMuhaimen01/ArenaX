<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval"> <!-- Oval shape for a circular button -->

    <!-- Gradient Fill -->
    <gradient
        android:angle="90"
    android:startColor="@color/gradientStartOrange"
    android:endColor="@color/gradientEndYellow"
    android:type="linear" />

    <!-- Optional: Stroke (border around the circle) -->
    <stroke
        android:width="@dimen/_2sdp"
        android:color="@color/black" />

    <!-- Size of the circle -->
    <size
        android:width="@dimen/_56sdp"
        android:height="@dimen/_56sdp" />
</shape>

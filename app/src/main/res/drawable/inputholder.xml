<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default State -->
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/secondaryColor" /> <!-- Dark background -->
            <corners android:radius="10dp" /> <!-- Rounded corners -->
            <padding
                android:left="12dp"
                android:right="12dp"
                android:top="8dp"
                android:bottom="8dp" /> <!-- Internal padding -->
            <stroke
                android:width="1dp"
                android:color="@color/fieldOutline" /> <!-- Subtle slate blue border -->
        </shape>
    </item>

    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/secondaryColor" /> <!-- Dark background remains consistent -->
            <corners android:radius="10dp" /> <!-- Rounded corners -->
            <padding
                android:left="12dp"
                android:right="12dp"
                android:top="8dp"
                android:bottom="8dp" /> <!-- Internal padding -->
            <stroke
                android:width="2dp"
                android:color="@color/interactiveColor" /> <!-- Warm yellow border on focus -->
        </shape>
    </item>
</selector>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default State -->
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/interactiveColor" /> <!-- Warm Yellow (#FFD166) for default state -->
            <corners android:radius="25dp" /> <!-- Rounded corners for a modern look -->
            <stroke
                android:width="1dp"
                android:color="@color/softGray" /> <!-- Neutral gray border for subtle contrast -->
        </shape>
    </item>

    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/highlightColor" /> <!-- Vibrant Crimson Red (#EF476F) for pressed state -->
            <corners android:radius="25dp" />
            <stroke
                android:width="1dp"
                android:color="@color/softGray" />
        </shape>
    </item>

    <!-- Disabled State -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/lightGray" /> <!-- Lighter gray (#6B6B6B) for disabled state -->
            <corners android:radius="25dp" />
            <stroke
                android:width="1dp"
                android:color="@color/softGray" />
        </shape>
    </item>
</selector>
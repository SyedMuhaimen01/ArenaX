<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".esportsManagement.mangeOrganization.ui.Teams.editOwnTeam.editOwnTeam">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
        <LinearLayout

            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:background="@drawable/screenbackground"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_16sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                tools:ignore="RtlSymmetry">

                <!-- Back Button -->
                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_cancel"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back Button"
                    android:tint="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="HardcodedText,UseAppTint" />

                <!-- Centered Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Team"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="HardcodedText" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/teamLogoImageView"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginStart="@dimen/_120sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/ImagePlaceholder"
                android:backgroundTint="@color/white"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription,UnusedAttribute" />
            <TextView
                android:id="@+id/teamLogoTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="upload Team Logo"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_110sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_150sdp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team Name"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/textColorSecondary"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/teamNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/inputholder"
                    android:hint="Enter Team Name"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:textColor="@color/textColorPrimary"
                    android:textColorHint="@color/hinttextColor"
                    android:textSize="@dimen/_13ssp"
                    tools:ignore="Autofill,HardcodedText,TextFields" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Game Name"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/textColorSecondary"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/gameNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/inputholder"
                    android:hint="Enter Game Name"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:textColor="@color/textColorPrimary"
                    android:textColorHint="@color/hinttextColor"
                    android:textSize="@dimen/_13ssp"
                    tools:ignore="Autofill,HardcodedText,TextFields" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Region/Country"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/textColorSecondary"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/teamLocationEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/inputholder"
                    android:hint="Enter Game Name"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:textColor="@color/textColorPrimary"
                    android:textColorHint="@color/hinttextColor"
                    android:textSize="@dimen/_13ssp"
                    tools:ignore="Autofill,HardcodedText,TextFields" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team Email"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/textColorSecondary"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/teamEmailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/inputholder"
                    android:hint="jhondoe@gmail.com"
                    android:gravity="center_vertical"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:textColor="@color/textColorPrimary"
                    android:textColorHint="@color/hinttextColor"
                    android:textSize="@dimen/_13ssp"
                    tools:ignore="Autofill,HardcodedText,TextFields" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team Captain (gamerTag)"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/textColorSecondary"
                    tools:ignore="HardcodedText" />
                <AutoCompleteTextView
                    android:id="@+id/teamCaptainEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/inputholder"
                    android:hint="GamerTag"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:textColor="@color/textColorPrimary"
                    android:textColorHint="@color/hinttextColor"
                    android:textSize="@dimen/_13ssp"
                    tools:ignore="Autofill,HardcodedText,TextFields" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tagline"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/textColorSecondary"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/teamTagLineEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/inputholder"
                    android:hint="Tagline..."
                    android:textStyle="italic"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:textColor="@color/textColorPrimary"
                    android:textColorHint="@color/hinttextColor"
                    android:textSize="@dimen/_13ssp"
                    tools:ignore="Autofill,HardcodedText,TextFields" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team Details"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/textColorSecondary"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/teamDetailsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/inputholder"
                    android:hint="Team Details here..."
                    android:gravity="center_vertical"
                    android:inputType="textMultiLine"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:textColor="@color/textColorPrimary"
                    android:textColorHint="@color/hinttextColor"
                    android:textSize="@dimen/_13ssp"
                    tools:ignore="Autofill,HardcodedText,TextFields" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team Achievements"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/textColorSecondary"
                    tools:ignore="HardcodedText" />
                <EditText
                    android:id="@+id/teamAchievementsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/inputholder"
                    android:hint="Team Achievements here..."
                    android:gravity="center_vertical"
                    android:inputType="textMultiLine"
                    android:paddingStart="@dimen/_16sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:textColor="@color/textColorPrimary"
                    android:textColorHint="@color/hinttextColor"
                    android:textSize="@dimen/_13ssp"
                    tools:ignore="Autofill,HardcodedText,TextFields" />

                <Button
                    android:id="@+id/registerButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="@color/accentColor"
                    android:text="Register"
                    android:gravity="center"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".esportsManagement.mangeOrganization.ui.manageEvents.schedulingEvent.schedulingEvent"
    android:background="@drawable/screenbackground"
    android:id="@+id/main"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:paddingBottom="@dimen/_150sdp"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/uploadToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/_16sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                tools:ignore="RtlSymmetry">

                <!-- Back Button -->
                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_cancel"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back Button"
                    android:tint="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:ignore="HardcodedText,UseAppTint" />

                <!-- Centered Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Scheduling"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="HardcodedText" />
            </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Media preview area (Image or Video) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/previewImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_280sdp"
        android:scaleType="centerCrop"
        android:background="@color/ImagePlaceholder"
        android:contentDescription="Media Preview"
        tools:ignore="HardcodedText,MissingConstraints" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/galleryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_gallery"
            app:backgroundTint="@color/interactiveColor"
            app:tint="@color/white"
            app:elevation="@dimen/_6sdp"
            app:pressedTranslationZ="@dimen/_8sdp"
            android:layout_gravity="bottom|end"
            tools:ignore="ContentDescription"
            android:layout_marginTop="-70dp"
            android:layout_marginEnd="@dimen/_10sdp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_150sdp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/textColorSecondary"
            tools:ignore="HardcodedText" />
            <EditText
                android:id="@+id/eventNameEditText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/inputholder"
                android:hint="Enter Event Name"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:textColor="@color/textColorPrimary"
                android:textColorHint="@color/hinttextColor"
                android:textSize="@dimen/_13ssp"
                tools:ignore="Autofill,HardcodedText,TextFields"  />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Game Name"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/textColorSecondary"
            tools:ignore="HardcodedText" />
        <EditText
            android:id="@+id/gameNameEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/inputholder"
            android:hint="Enter Game Name"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/hinttextColor"
            android:textSize="@dimen/_13ssp"
            tools:ignore="Autofill,HardcodedText,TextFields" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Mode"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/textColorSecondary"
            tools:ignore="HardcodedText" />

            <Spinner
                android:id="@+id/eventModeSpinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/inputholder"
                android:gravity="center_vertical"
                android:popupBackground="@color/backgroundColor"
                />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Platform"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/textColorSecondary"
            tools:ignore="HardcodedText" />


        <Spinner
            android:id="@+id/eventPlatformSpinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/inputholder"
            android:gravity="center_vertical"
            android:popupBackground="@color/backgroundColor"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/textColorSecondary"
            tools:ignore="HardcodedText" />
            <EditText
                android:id="@+id/locationEditText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/inputholder"
                android:hint="Enter Game Name"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:textColor="@color/textColorPrimary"
                android:textColorHint="@color/hinttextColor"
                android:textSize="@dimen/_13ssp"
                tools:ignore="Autofill,HardcodedText,TextFields"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Description"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/textColorSecondary"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/eventDetailsEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/inputholder"
            android:hint="Team Details here..."
            android:gravity="center_vertical"
            android:inputType="textMultiLine"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/hinttextColor"
            android:textSize="@dimen/_13ssp"
            tools:ignore="Autofill,HardcodedText,TextFields"  />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Date"
                        android:layout_gravity="center"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/startDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="yyyy-mm-dd"
                        android:background="@drawable/inputholder"
                        android:textColorHint="@color/hinttextColor"
                        android:textSize="@dimen/_12sdp"
                        android:gravity="center"
                        android:inputType="date"
                        android:textColor="@color/textColorPrimary"
                        tools:ignore="Autofill,HardcodedText,LabelFor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Date"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/endDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="yyyy-mm-dd"
                        android:background="@drawable/inputholder"
                        android:textColorHint="@color/hinttextColor"
                        android:gravity="center"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_12sdp"
                        android:inputType="date"
                        tools:ignore="Autofill,HardcodedText,LabelFor" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Time"
                        android:layout_gravity="center"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/startTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="11:40 am"
                        android:textColorHint="@color/hinttextColor"
                        android:background="@drawable/inputholder"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/textColorPrimary"
                        android:gravity="center"
                        android:inputType="time"
                        tools:ignore="Autofill,HardcodedText,LabelFor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Time"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/endTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="12:00 pm"
                        android:gravity="center"
                        android:background="@drawable/inputholder"
                        android:textColorHint="@color/hinttextColor"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_12sdp"
                        android:inputType="time"
                        tools:ignore="Autofill,HardcodedText,LabelFor" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Link"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/textColorSecondary"
                tools:ignore="HardcodedText" />
            <EditText
                android:id="@+id/eventLinkEditText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/inputholder"
                android:hint="www.company.com"
                android:textStyle="italic"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:textColor="@color/textColorPrimary"
                android:textColorHint="@color/hinttextColor"
                android:textSize="@dimen/_13ssp"
                tools:ignore="Autofill,HardcodedText,TextFields"/>

        <Button
            android:id="@+id/scheduleButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/accentColor"
            android:text="Schedule Event"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            tools:ignore="HardcodedText" />

    </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    tools:context=".esportsManagement.mangeOrganization.ui.Teams.viewOwnTeams.viewOwnTeam">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_150sdp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:id="@+id/team_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12sdp"
            app:cardBackgroundColor="@color/primaryColor"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_4sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_12sdp">

                <!-- Team Logo -->
                <ImageView
                    android:id="@+id/teamLogo"
                    android:layout_width="@dimen/_72sdp"
                    android:layout_height="@dimen/_72sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />

                <!-- Team Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Team Name -->
                    <TextView
                        android:id="@+id/teamNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team Name"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <!-- Game Name -->
                    <TextView
                        android:id="@+id/gameNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Game Name"
                        android:textColor="@color/interactiveColor"
                        android:textSize="@dimen/_13sdp"
                        tools:ignore="HardcodedText" />

                    <!-- Location -->
                    <TextView
                        android:id="@+id/teamLocationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pakistan"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/_12ssp"
                        tools:ignore="HardcodedText" />

                    <!-- Tagline -->
                    <TextView
                        android:id="@+id/teamTaglineTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Build, Connect, Compete"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="italic"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Team Info -->
        <androidx.cardview.widget.CardView
            android:id="@+id/team_info_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardBackgroundColor="@color/primaryColor"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_4sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_12sdp">

                <!-- Team Captain -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Team Captain"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal">

                    <!-- Profile Picture -->
                    <ImageView
                        android:id="@+id/teamCaptainProfilePicture"
                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_48sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:scaleType="centerCrop"
                        tools:ignore="ContentDescription" />

                    <!-- Captain Name -->
                    <TextView
                        android:id="@+id/captainNameTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Captain Name"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_16ssp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <!-- Team Email -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="Team Email"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/teamEmailTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="team@example.com"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/_12sdp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Achievements -->
        <androidx.cardview.widget.CardView
            android:id="@+id/team_achievements_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:cardBackgroundColor="@color/primaryColor"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_4sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_12sdp">

                <!-- Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Achievements"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <!-- Content -->
                <TextView
                    android:id="@+id/team_achievements_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="Achievements here..."
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/_12sdp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Team Details -->
        <androidx.cardview.widget.CardView
            android:id="@+id/team_details_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_12sdp"
            app:cardBackgroundColor="@color/primaryColor"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_4sdp">

            <TextView
                android:id="@+id/team_details_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_12sdp"
                android:text="Team details here..."
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/_12sdp"
                tools:ignore="HardcodedText" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/team_Players_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardBackgroundColor="@color/primaryColor"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_4sdp">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_12sdp"
                tools:ignore="UselessLeaf,UselessParent">
                <!-- Search Bar -->
                <LinearLayout
                    android:id="@+id/searchLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/searchbar"
                    android:orientation="horizontal"
                    android:weightSum="4"
                    android:visibility="gone">

                    <!-- AutoCompleteTextView for search -->
                    <AutoCompleteTextView
                        android:id="@+id/searchbar"
                        android:layout_width="0dp"
                        android:layout_weight="3.9"
                        android:layout_height="@dimen/_33sdp"
                        android:hint="Search ..."
                        android:textColorHint="@color/hinttextColor"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_13sdp"
                        android:background="@drawable/searchbar_input_background"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:gravity="center_vertical"
                        tools:ignore="HardcodedText" />

                    <!-- Search icon button -->
                    <ImageButton
                        android:id="@+id/searchButton"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/searchicon_foreground"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:tint="@color/interactiveColor"
                        android:contentDescription="Search Icon"
                        android:layout_weight="0.1"
                        tools:ignore="HardcodedText,UseAppTint" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Players"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <!-- RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/playersRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:padding="@dimen/_10sdp"
                    android:background="@color/secondaryColor"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/searchUserRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:padding="@dimen/_10sdp"
                    android:background="@color/secondaryColor"
                    android:visibility="gone"/>

                <!-- Floating Action Button at the bottom right -->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/addPlayerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_navigation_add"
                    android:contentDescription="Add Post"
                    app:backgroundTint="@color/interactiveColor"
                    app:tint="@color/white"
                    app:elevation="@dimen/_6sdp"
                    app:pressedTranslationZ="@dimen/_8sdp"
                    android:layout_gravity="end"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    tools:ignore="ContentDescription,HardcodedText" />
            </LinearLayout>

        </FrameLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

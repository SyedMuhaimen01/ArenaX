<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    tools:context=".uploadContent.UploadContent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:scrollbars="none">

        <!-- Organization Info Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/InfoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:cardElevation="@dimen/_4sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardBackgroundColor="@color/secondaryColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_16sdp">

                    <!-- Profile Picture -->
                    <ImageView
                        android:id="@+id/profilePicture"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginEnd="@dimen/_6sdp"
                        android:contentDescription="Profile Picture"
                        android:layout_gravity="center_vertical"
                        android:scaleType="centerCrop"
                        tools:ignore="ContentDescription,HardcodedText" />

                    <!-- Organization Details -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/_8sdp"
                        tools:ignore="RtlSymmetry">

                        <TextView
                            android:id="@+id/organizationNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Organization Name"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/_16ssp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/organizationWebsiteTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="www.website.com"
                            android:textColor="@color/interactiveColor"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="italic"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/organizationIndustryTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Esports organization"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/_12ssp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/organizationTypeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Public Limited"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/_12ssp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/organizationSizeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500+ Employees"
                            android:textColor="@color/textColorSecondary"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="italic"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/organizationLocationTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Islamabad, Pakistan"
                            android:textColor="@color/hinttextColor"
                            android:textSize="@dimen/_12ssp"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/organizationTaglineTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Build, Connect, Compete"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold|italic"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Media Preview Area -->
            <ImageView
                android:id="@+id/bannerImageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_280sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_5sdp"
                android:background="@color/primaryColor"
                android:contentDescription="Media Preview"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription,HardcodedText" />

            <!-- Event Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/secondaryColor">

                <TextView
                    android:id="@+id/eventNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Name"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <!-- Location -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_8sdp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/ic_location_pin_foreground"
                        android:tint="@color/hinttextColor"
                        android:contentDescription="Location Icon"
                        tools:ignore="ContentDescription,HardcodedText,UseAppTint" />

                    <TextView
                        android:id="@+id/eventLocationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textColor="@color/hinttextColor"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginStart="@dimen/_4sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <!-- Game -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_8sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Game:"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/eventGameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Game"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginStart="@dimen/_4sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <!-- Event Mode -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_8sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event Mode:"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/eventModeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Online"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginStart="@dimen/_4sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <!-- Platform -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_8sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Platform:"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/eventPlatformTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginStart="@dimen/_4sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </LinearLayout>

            <!-- Date and Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_6sdp"
                android:padding="@dimen/_16sdp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/secondaryColor"
                tools:ignore="DisableBaselineAlignment">

                <!-- Start Date -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Date"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/startDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20/1/11"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_14ssp"
                        android:layout_marginTop="@dimen/_4sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <!-- End Date -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Date"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/endDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21/1/11"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_14ssp"
                        android:layout_marginTop="@dimen/_4sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </LinearLayout>

            <!-- Start and End Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_6sdp"
                android:padding="@dimen/_16sdp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/secondaryColor"
                tools:ignore="DisableBaselineAlignment">

                <!-- Start Time -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Time"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/startTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11:40 am"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_14ssp"
                        android:layout_marginTop="@dimen/_4sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <!-- End Time -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Time"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_12ssp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00 pm"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="@dimen/_14ssp"
                        android:layout_marginTop="@dimen/_4sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </LinearLayout>

            <!-- Event Details -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Details"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/eventDetailsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event details go here ..."
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/_10sdp"
                android:padding="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/secondaryColor"
                tools:ignore="HardcodedText" />

            <!-- Event Link -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Link"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_10sdp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/eventLinkTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="www.event.com"
                android:textColor="@color/interactiveColor"
                android:textSize="@dimen/_12sdp"
                android:textStyle="italic"
                android:padding="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:background="@drawable/rounded_corners"
                tools:ignore="HardcodedText" />

            <!-- Show Interest Button -->
            <Button
                android:id="@+id/showInterestButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/accentColor"
                android:text="Show Interest"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:gravity="center"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
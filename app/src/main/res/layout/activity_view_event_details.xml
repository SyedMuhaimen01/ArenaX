<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".uploadContent.UploadContent"
    android:background="@color/backgroundColor"
    android:id="@+id/main"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_50sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/InfoCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/primaryColor"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardUseCompatPadding="true"
                    app:cardPreventCornerOverlap="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="MissingConstraints">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!-- Profile picture -->
                        <ImageView
                            android:id="@+id/profilePicture"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:background="@drawable/circle"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:contentDescription="@string/nav_header_desc"
                            android:clipToOutline="true"
                            tools:ignore="UnusedAttribute" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- Name -->
                            <TextView
                                android:id="@+id/organizationNameTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Organization Name"
                                android:textStyle="bold"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/textColor"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/organizationWebsiteTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="www.website.com"
                                android:textStyle="italic"

                                android:textSize="@dimen/_12ssp"
                                android:textColor="@color/primaryColor"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:id="@+id/organizationIndustryTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Esports organization"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/textColor"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/organizationTypeTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Public Limited"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/textColor"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:id="@+id/organizationSizeTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="500+ Empployees"
                                android:textStyle="italic"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/textColor"
                                tools:ignore="HardcodedText" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">
                                <TextView
                                    android:id="@+id/organizationLocationTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Islamabad, Pakistan"
                                    android:layout_weight="1"
                                    android:textSize="@dimen/_12ssp"
                                    android:textColor="@color/hinttextColor"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/organizationTaglineTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Build, Connect, Compete"
                                android:textStyle="bold"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/textColor"
                                tools:ignore="HardcodedText" />



                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <!-- Media preview area (Image or Video) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/bannerImageView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_280sdp"
                    android:scaleType="centerCrop"

                    android:background="@color/ImagePlaceholder"
                    android:contentDescription="Media Preview"
                    tools:ignore="HardcodedText,MissingConstraints" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
             >
            <TextView
                android:id="@+id/eventNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textStyle="bold"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/textColor"
                tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location_pin_foreground"
                        android:scaleType="centerCrop"
                        app:tint="@android:color/darker_gray"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/eventLocationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginStart="4dp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Game:"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/eventGameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Game"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/textColor"
                    tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Event Mode:"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/eventModeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Online"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/textColor"
                    tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Platform:"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/eventPlatformTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:text="Mobile"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/textColor"
                    tools:ignore="HardcodedText" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:weightSum="2"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Date"
                        android:layout_gravity="center"
                        android:textColor="@color/textColor"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/startDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20/1/11"
                        android:textSize="@dimen/_12sdp"
                        android:gravity="center"
                        android:textColor="@color/textColor"
                        tools:ignore="Autofill,HardcodedText,LabelFor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Date"
                        android:textColor="@color/textColor"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/endDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="21/1/11"
                        android:gravity="center"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="Autofill,HardcodedText,LabelFor" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Time"
                        android:layout_gravity="center"
                        android:textColor="@color/textColor"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/startTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="11:40 am"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/textColor"
                        android:gravity="center"
                        tools:ignore="Autofill,HardcodedText,LabelFor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Time"
                        android:textColor="@color/textColor"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/endTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12:00 pm"
                        android:gravity="center"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="Autofill,HardcodedText,LabelFor" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Details"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/eventDetailsTextView"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/textColor"
                    android:scrollbars="vertical"

                    android:background="@color/backgroundColor"
                    android:text="Job Description here ..."
                    android:maxLines="1000"
                    tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Link"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/eventLinkTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="www.event.com"
                android:textStyle="italic"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="@color/primaryColor"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/showInterestButton"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_23sdp"
                android:layout_marginEnd="@dimen/_17sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/buttonholder2"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Show Interest"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>

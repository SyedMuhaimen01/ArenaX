<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".uploadStory.viewStory"
    android:background="@color/backgroundColor">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="vertical"
        android:background="@color/backgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_20sdp"
            android:paddingBottom="@dimen/_80sdp"
            android:background="@color/backgroundColor">

            <FrameLayout
                android:layout_width="match_parent"
                android:background="@color/primaryColor"
                android:layout_height="@dimen/_510sdp">

                <!-- Media Preview (Image or Video) -->
                <ImageView
                    android:id="@+id/ImageView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_510sdp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:background="@color/accentColor"
                    android:contentDescription="Media Preview"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:visibility="gone"
                    tools:ignore="HardcodedText,ObsoleteLayoutParam" />

                <com.google.android.exoplayer2.ui.PlayerView
                    android:id="@+id/videoPlayerView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_510sdp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:contentDescription="Media Preview"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:visibility="gone"
                    tools:ignore="HardcodedText,ObsoleteLayoutParam" />

                <!-- Toolbar with Back Button and Post Title -->
                <LinearLayout
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:padding="@dimen/_4sdp"
                    android:layout_gravity="top">

                    <!-- User Profile Picture -->
                    <ImageView
                        android:id="@+id/ProfilePicture"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/applogo"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/usernameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Username"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/white"
                            tools:ignore="HardcodedText" />

                        <!-- Total Hours -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/locationTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="location"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@color/white"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <!-- Post Interaction Section: Likes, Comments, Shares -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/backgroundColor"
                android:gravity="center"
                android:weightSum="3"
                tools:ignore="DisableBaselineAlignment">

                <!-- Like Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp">

                    <ImageButton
                        android:id="@+id/likeButton"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:contentDescription="Like Button"
                        android:src="@drawable/like_icon_foreground"
                        android:tint="@color/interactiveColor"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:visibility="gone"
                        tools:ignore="HardcodedText,UseAppTint" />

                    <ImageButton
                        android:id="@+id/likeFilledButton"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:contentDescription="Like Button"
                        android:src="@drawable/like_icon_filled_foreground"
                        android:tint="@color/accentColor"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:visibility="gone"
                        tools:ignore="HardcodedText,UseAppTint" />

                    <TextView
                        android:id="@+id/likeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="0"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/_14sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <!-- Comment Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp">

                    <ImageButton
                        android:id="@+id/commentButton"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:contentDescription="Comment Button"
                        android:src="@drawable/comment_icon_foreground"
                        android:tint="@color/interactiveColor"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        tools:ignore="HardcodedText,UseAppTint" />

                    <TextView
                        android:id="@+id/commentCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="0"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/_14sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <!-- Share Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp">

                    <ImageButton
                        android:id="@+id/shareButton"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:contentDescription="Share Button"
                        android:src="@drawable/share2_icon_foreground"
                        android:tint="@color/interactiveColor"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        tools:ignore="HardcodedText,UseAppTint" />

                    <TextView
                        android:id="@+id/shareCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="0"
                        android:textColor="@color/textColorSecondary"
                        android:textSize="@dimen/_14sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </LinearLayout>

            <!-- Caption Section -->
            <TextView
                android:id="@+id/postCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="This is the caption for the post."
                android:textColor="@color/textColorSecondary"
                android:textSize="12sp"
                android:maxLines="3"
                android:ellipsize="end"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/seeMoreButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="See More"
                android:textColor="@color/textColorPrimary"
                android:textSize="12sp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:visibility="gone"
                tools:ignore="HardcodedText" />

            <!-- Write Comment Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/view_comment_bg"
                android:padding="@dimen/_8sdp">

                <!-- Profile Picture -->
                <ImageView
                    android:id="@+id/commentProfilePicture"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:background="@drawable/circle"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/applogo"
                    tools:ignore="ContentDescription" />

                <!-- Comment Input Field -->
                <EditText
                    android:id="@+id/writeCommentEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Write a comment..."
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_12sdp"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:textColor="@color/textColorPrimary"
                    android:layout_gravity="center_vertical"
                    android:textColorHint="@color/hinttextColor"
                    android:textSize="@dimen/_14ssp"
                    android:background="@drawable/inputholder"
                    android:inputType="textMultiLine"
                    tools:ignore="Autofill,HardcodedText" />

                <!-- Post Button -->
                <ImageButton
                    android:id="@+id/postCommentButton"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Post Comment"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/post_comment_icon_foreground"
                    android:tint="@color/interactiveColor"
                    tools:ignore="ContentDescription,HardcodedText,UseAppTint" />
            </LinearLayout>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

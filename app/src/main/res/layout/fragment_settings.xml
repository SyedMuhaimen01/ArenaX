<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".gamesDashboard.gamesList">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_12sdp"
            tools:ignore="UselessLeaf,UselessParent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/_12sdp"
                android:paddingEnd="@dimen/_12sdp">
                <LinearLayout
                    android:id="@+id/manageAdminsLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/settings_button_bg"
                    android:orientation="horizontal"
                    android:elevation="4dp"
                    android:gravity="center_vertical"
                    tools:ignore="UselessParent">

                    <ImageButton
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_manage_admin_foreground"
                        android:contentDescription="Manage Admins Icon"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:tint="@color/white"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        tools:ignore="HardcodedText,UseAppTint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage Admins"
                        android:textColor="@color/textColorPrimary"
                        android:textStyle="bold"
                        android:textSize="@dimen/_16sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/manageFollowingLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/settings_button_bg"
                    android:orientation="horizontal"
                    android:elevation="4dp"
                    android:gravity="center_vertical"
                    tools:ignore="UselessParent">

                    <ImageButton
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_manage_following_foreground"
                        android:contentDescription="Manage Following Icon"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:tint="@color/white"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        tools:ignore="HardcodedText,UseAppTint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage Following"
                        android:textColor="@color/textColorPrimary"
                        android:textStyle="bold"
                        android:textSize="@dimen/_16sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/manageEmployeesLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/settings_button_bg"
                    android:orientation="horizontal"
                    android:elevation="4dp"
                    android:gravity="center_vertical"
                    tools:ignore="UselessParent">

                    <ImageButton
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/ic_manage_employee_foreground"
                        android:contentDescription="Manage Employees Icon"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:tint="@color/white"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        tools:ignore="HardcodedText,UseAppTint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage Employees"
                        android:textColor="@color/textColorPrimary"
                        android:textStyle="bold"
                        android:textSize="@dimen/_16sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/deleteOrganizationLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/settings_button_bg"
                    android:orientation="horizontal"
                    android:elevation="4dp"
                    android:gravity="center_vertical"
                    tools:ignore="UselessParent">

                    <ImageButton
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@android:drawable/ic_menu_delete"
                        android:contentDescription="Delete Icon"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:backgroundTint="@color/accentColor"
                        android:tint="@color/accentColor"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        tools:ignore="HardcodedText,UseAppTint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete Organization"
                        android:textColor="@color/accentColor"
                        android:textStyle="bold"
                        android:textSize="@dimen/_16sdp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>
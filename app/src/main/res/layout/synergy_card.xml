<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    app:cardBackgroundColor="@color/backgroundColor"
    app:cardCornerRadius="@dimen/_16sdp"
    app:cardElevation="@dimen/_6sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:weightSum="4">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/circle"
            android:scaleType="centerCrop"
            android:contentDescription="Profile Picture"
            android:layout_gravity="center_vertical"
            tools:ignore="ContentDescription,HardcodedText" />

        <!-- Text Information -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/_8sdp">

            <TextView
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/gamerTag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gamer Tag"
                android:textColor="@color/textColorSecondary"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/gamerRank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rank: 00"
                android:textColor="@color/accentColor"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_2sdp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="@dimen/_8sdp">

            <!-- Message Button -->
            <Button
                android:id="@+id/messageButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="2"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/interactiveColor"
                android:text="Message"
                android:textColor="@color/textColorTernary"
                android:textSize="@dimen/_10sdp"

                android:gravity="center"
                tools:ignore="HardcodedText,NestedWeights" />

            <!-- Remove Button -->
            <ImageButton
                android:id="@+id/removeButton"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:src="@drawable/remove_user_icon_foreground"
                android:tint="@color/highlightColor"
                android:background="@color/backgroundColor"
                android:contentDescription="Remove User"
                android:padding="@dimen/_8sdp"
                tools:ignore="HardcodedText,UseAppTint" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

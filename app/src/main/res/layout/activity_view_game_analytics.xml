<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".gamesDashboard.gamesList">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:paddingStart="@dimen/_16sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingBottom="@dimen/_8sdp"
        tools:ignore="RtlSymmetry">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/back_white2_icon_foreground"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back Button"
            android:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="HardcodedText,UseAppTint" />

        <!-- Centered Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Analytics"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Content -->
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <!-- Game Icon Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:backgroundTint="@color/secondaryColor"
        android:background="@drawable/rounded_corners"
        android:padding="@dimen/_8sdp"
        android:gravity="center_vertical">

    <!-- Game Icon -->
    <ImageView
        android:id="@+id/game_icon"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:scaleType="centerCrop"
        android:contentDescription="Game Icon"
        android:padding="@dimen/_2sdp"
        tools:ignore="HardcodedText" />

    <!-- Text Container: Game Name and Hours -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Game Name -->
        <TextView
            android:id="@+id/game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Name"
            android:textStyle="bold"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/textColorPrimary"
            android:maxLines="1"
            android:ellipsize="end"
            tools:ignore="HardcodedText" />

        <!-- Total Hours -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"
                android:src="@drawable/ic_clock_icon_foreground"
                android:tint="@color/interactiveColor"
                android:layout_marginTop="@dimen/_2sdp"
                android:contentDescription="Clock Icon"
                tools:ignore="HardcodedText,UseAppTint" />

            <TextView
                android:id="@+id/total_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:text="0 hrs"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/textColorSecondary"
                android:gravity="center_vertical"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

<!-- Charts Section -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/_10sdp">

    <!-- Total Play Time Chart -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Play Time (hrs)"
        android:textStyle="bold"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/textColorPrimary"
        tools:ignore="HardcodedText" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/screenTimeLineChart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@color/secondaryColor"
        android:padding="@dimen/_8sdp" />

    <!-- Avg Session Length Chart -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avg Session Length (hrs)"
        android:textStyle="bold"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/textColorPrimary"
        tools:ignore="HardcodedText" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/averageSessionLengthChart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@color/secondaryColor"
        android:padding="@dimen/_8sdp" />

    <!-- Session Frequency Per Day Chart -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session Frequency per day"
        android:textStyle="bold"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/textColorPrimary"
        tools:ignore="HardcodedText" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/sessionFrequencyBarChart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@color/secondaryColor"
        android:padding="@dimen/_8sdp" />

    <!-- Peak Playtime Chart -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Peak Playtime"
        android:textStyle="bold"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/textColorPrimary"
        tools:ignore="HardcodedText" />

    <com.github.mikephil.charting.charts.ScatterChart
        android:id="@+id/peakPlayTimeChart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@color/secondaryColor"
        android:padding="@dimen/_8sdp" />

    <!-- Game Comparison Chart -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Comparison"
        android:textStyle="bold"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/textColorPrimary"
        tools:ignore="HardcodedText" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/gameComparisonPieChart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@color/secondaryColor"
        android:padding="@dimen/_8sdp" />
</LinearLayout>
</LinearLayout>
    </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".esportsManagement.esportsProfile.ui.notifications.notificationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingTop="@dimen/_24sdp"
        android:weightSum="1">

        <!-- Sent Applications Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sent Application(s)"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_4sdp"
            tools:ignore="HardcodedText" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/applicationsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@color/secondaryColor"
            android:backgroundTint="@color/secondaryColor"
            android:padding="@dimen/_10sdp"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:layout_marginBottom="@dimen/_16sdp"
            tools:listitem="@layout/notification_item" />

        <!-- Received Invites Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Received Invite(s)"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/textColorPrimary"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/_4sdp"
            tools:ignore="HardcodedText" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/invitesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@color/secondaryColor"
            android:backgroundTint="@color/secondaryColor"
            android:layout_marginBottom="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            tools:listitem="@layout/notification_item" />
    </LinearLayout>
</FrameLayout>
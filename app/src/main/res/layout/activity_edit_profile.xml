<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editProfile.editProfile"
    android:background="@drawable/screenbackground"
    >


    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
      >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_16sdp"
            android:paddingTop="@dimen/_8sdp"
            android:paddingBottom="@dimen/_8sdp"
            tools:ignore="RtlSymmetry">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_cancel"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back Button"
                android:tint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="HardcodedText,UseAppTint" />

            <!-- Centered Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <!-- Profile Picture Section -->
        <ImageView
            android:id="@+id/ProfilePicture"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/white"
            android:background="@drawable/circle"
            android:clipToOutline="true"
            tools:ignore="ContentDescription,UnusedAttribute" />

        <!-- Input Fields Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/_20sdp"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_20sdp">
        <TextView
            android:id="@+id/editProfilePictureText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Edit Profile Picture"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/textColorSecondary"
            tools:ignore="HardcodedText" />



            <!-- Name Field -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/textColorSecondary"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/inputholder"
                android:hint="Enter your name"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:textColor="@color/textColorPrimary"
                android:textColorHint="@color/hinttextColor"
                android:textSize="@dimen/_13ssp"
                tools:ignore="Autofill,HardcodedText,TextFields" />

            <!-- Gamer Tag Field -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gamer Tag"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/textColorSecondary"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/gamertagEditText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/inputholder"
                android:gravity="center_vertical"
                android:hint="Enter your gamer tag"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:textColor="@color/textColorPrimary"
                android:textColorHint="@color/hinttextColor"
                android:textSize="@dimen/_13ssp"
                tools:ignore="Autofill,HardcodedText,TextFields" />

            <!-- Bio Field -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bio"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/textColorSecondary"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/bioEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/inputholder"
                android:gravity="center_vertical"
                android:hint="Enter your bio"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp"
                android:textColor="@color/textColorPrimary"
                android:textColorHint="@color/hinttextColor"
                android:textSize="@dimen/_13ssp"
                tools:ignore="Autofill,HardcodedText,TextFields" />

            <!-- Gender Spinner -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/textColorSecondary"
                tools:ignore="HardcodedText" />

            <Spinner
                android:id="@+id/genderSpinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/inputholder"
                android:gravity="center_vertical"
                android:popupBackground="@color/backgroundColor"

               />

            <!-- Update Changes Button -->
            <Button
                android:id="@+id/updateChangesButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/accentColor"
                android:text="Update Changes"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- Loading Spinner -->
        <ProgressBar
            android:id="@+id/loadingSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="gone"
            android:indeterminate="true"
            android:indeterminateTint="@color/accentColor"
            style="@android:style/Widget.ProgressBar.Small" />
    </LinearLayout>
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/backgroundColor"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".esportsManagement.esportsProfile.ui.FindTeam.VeiwOpenRecruitmentAdDetails">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical"
        android:padding="@dimen/_4sdp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Profile picture -->
            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/circle"
                android:layout_marginEnd="@dimen/_10sdp"
                android:contentDescription="@string/nav_header_desc"
                android:clipToOutline="true"
                app:srcCompat="@mipmap/ic_launcher_round"
                tools:ignore="UnusedAttribute" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Name -->
                <TextView
                    android:id="@+id/jobTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Title"
                    android:textStyle="bold"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@color/textColor"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/jobTypeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Type"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/fullNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/textColor"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/gamerTagTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gamer Tag"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="italic"
                    tools:ignore="HardcodedText" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/locationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Islamabad, Pakistan"
                        android:layout_weight="1"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/hinttextColor"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/workplaceTypeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="On-site"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/hinttextColor"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tag1"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:textSize="@dimen/_11ssp"
                    android:layout_weight="1"
                    android:text="Tag1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:maxLength="15"
                    android:background="@drawable/searchbar"
                    android:backgroundTint="@color/backgroundGrey"
                    android:textColor="@color/textColor"
                    tools:ignore="Autofill,HardcodedText,LabelFor,TextFields" />
                <TextView
                    android:id="@+id/tag2"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_17sdp"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:textSize="@dimen/_11ssp"
                    android:maxLength="15"
                    android:text="Tag2"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:backgroundTint="@color/backgroundGrey"
                    android:background="@drawable/searchbar"
                    android:textColor="@color/textColor"
                    tools:ignore="Autofill,HardcodedText,LabelFor,TextFields" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tag3"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_weight="1"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:textSize="@dimen/_11ssp"
                    android:maxLength="15"
                    android:text="Tag3"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/searchbar"
                    android:backgroundTint="@color/backgroundGrey"
                    android:textColor="@color/textColor"
                    tools:ignore="Autofill,HardcodedText,LabelFor,TextFields" />
                <TextView
                    android:id="@+id/tag4"
                    android:layout_marginEnd="@dimen/_17sdp"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:textSize="@dimen/_11ssp"
                    android:layout_weight="1"
                    android:maxLength="15"
                    android:text="Tag4"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/searchbar"
                    android:backgroundTint="@color/backgroundGrey"
                    android:layout_gravity="center"
                    android:textColor="@color/textColor"
                    tools:ignore="Autofill,HardcodedText,LabelFor,TextFields" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        tools:ignore="HardcodedText" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_280sdp"
        android:background="@color/backgroundGrey"
        android:padding="@dimen/_5sdp"
        android:layout_margin="@dimen/_10sdp">
        <TextView
            android:id="@+id/recruitmentDetailsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/textColor"
            android:scrollbars="vertical"
            android:background="@color/backgroundGrey"
            android:text="Recruitment Details here ..."
            android:maxLines="1000"
            tools:ignore="HardcodedText" />
    </ScrollView>

    <Button
        android:id="@+id/closeButton"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_23sdp"
        android:layout_marginEnd="@dimen/_17sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/buttonholder2"
        android:text="Close Recruitment"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="center|bottom"
        android:textSize="@dimen/_13ssp"
        tools:ignore="HardcodedText" />

</LinearLayout>
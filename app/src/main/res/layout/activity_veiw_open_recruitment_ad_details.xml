<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context=".esportsManagement.esportsProfile.ui.FindTeam.ViewOpenRecruitmentAdDetails">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/secondaryColor"
        android:elevation="@dimen/_4sdp">

        <!-- Profile Picture and Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Profile Picture -->
            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="@dimen/_72sdp"
                android:layout_height="@dimen/_72sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/nav_header_desc"
                android:scaleType="centerCrop"
                tools:ignore="UnusedAttribute" />

            <!-- User Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="@dimen/_8sdp"
                tools:ignore="RtlSymmetry">

                <!-- Job Title -->
                <TextView
                    android:id="@+id/jobTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Title"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <!-- Job Type -->
                <TextView
                    android:id="@+id/jobTypeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Type"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="HardcodedText" />

                <!-- Full Name -->
                <TextView
                    android:id="@+id/fullNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <!-- Gamer Tag -->
                <TextView
                    android:id="@+id/gamerTagTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gamer Tag"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="italic"
                    tools:ignore="HardcodedText" />

                <!-- Location and Workplace Type -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/locationTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Islamabad, Pakistan"
                        android:textColor="@color/hinttextColor"
                        android:textSize="@dimen/_12ssp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/workplaceTypeTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="On-site"
                        android:textColor="@color/hinttextColor"
                        android:textSize="@dimen/_12ssp"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Tags Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/_12sdp">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:paddingBottom="@dimen/_8sdp">

                <TextView
                    android:id="@+id/tag1"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:background="@drawable/rounded_corners"
                    android:gravity="center"
                    android:text="Tag1"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tag2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners"
                    android:gravity="center"
                    android:text="Tag2"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tag3"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:background="@drawable/rounded_corners"
                    android:gravity="center"
                    android:text="Tag3"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tag4"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners"
                    android:gravity="center"
                    android:text="Tag4"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Recruitment Details Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        tools:ignore="HardcodedText" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_240sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/secondaryColor"
        android:padding="@dimen/_12sdp">

        <TextView
            android:id="@+id/recruitmentDetailsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recruitment Details here ..."
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/_12ssp"
            tools:ignore="HardcodedText" />
    </ScrollView>

    <!-- Close Button -->
    <Button
        android:id="@+id/closeButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/accentColor"
        android:text="Close Recruitment"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        android:gravity="center"
        tools:ignore="HardcodedText" />
</LinearLayout>
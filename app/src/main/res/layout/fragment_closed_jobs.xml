<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".esportsManagement.esportsProfile.ui.FindTeam.OpenUserJobs">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor">

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_10sdp">

            <!-- Search Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/searchbar"
                android:orientation="horizontal"
                android:weightSum="4">

                <!-- AutoCompleteTextView for search -->
                <AutoCompleteTextView
                    android:id="@+id/searchbar"
                    android:layout_width="0dp"
                    android:layout_weight="3.9"
                    android:layout_height="@dimen/_33sdp"
                    android:hint="Search ..."
                    android:textColorHint="@color/hinttextColor"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_13sdp"
                    android:background="@drawable/searchbar_input_background"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:gravity="center_vertical"
                    tools:ignore="HardcodedText" />

                <!-- Search icon button -->
                <ImageButton
                    android:id="@+id/searchButton"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/searchicon_foreground"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:tint="@color/interactiveColor"
                    android:contentDescription="Search Icon"
                    android:layout_weight="0.1"
                    tools:ignore="HardcodedText,UseAppTint" />
            </LinearLayout>

            <!-- Tags RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tags_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48sdp"
                android:layout_marginTop="@dimen/_12sdp"

                android:background="@color/secondaryColor"
                android:padding="@dimen/_8sdp"
                android:visibility="visible"
                />

            <!-- Open Jobs RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/closedJobs_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@color/secondaryColor"
                android:padding="@dimen/_12sdp"
                android:visibility="visible"
                />
        </LinearLayout>
    </FrameLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
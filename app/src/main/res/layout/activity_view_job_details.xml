<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    tools:context=".esportsManagement.mangeOrganization.ui.Jobs.viewJobDetails">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/secondaryColor"
        android:elevation="@dimen/_4sdp">

        <!-- Profile Picture and Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Profile Picture -->
            <ImageView
                android:id="@+id/organizationLogo"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:contentDescription="Organization Logo"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription,HardcodedText" />

            <!-- Organization Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="@dimen/_8sdp"
                tools:ignore="RtlSymmetry">

                <!-- Job Title -->
                <TextView
                    android:id="@+id/jobTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Title"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <!-- Job Type -->
                <TextView
                    android:id="@+id/jobTypeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Type"
                    android:textColor="@color/textColorSecondary"
                    android:textSize="@dimen/_12ssp"
                    tools:ignore="HardcodedText" />

                <!-- Organization Name -->
                <TextView
                    android:id="@+id/organizationNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organization Name"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <!-- Location and Workplace Type -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:paddingTop="@dimen/_4sdp">

                    <TextView
                        android:id="@+id/locationTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Islamabad, Pakistan"
                        android:textColor="@color/hinttextColor"
                        android:textSize="@dimen/_12ssp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/workplaceTypeTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="On-site"
                        android:textColor="@color/hinttextColor"
                        android:textSize="@dimen/_12ssp"
                        android:gravity="end"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Tags Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/_12sdp">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">

                <TextView
                    android:id="@+id/tag1"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="@color/backgroundColor"
                    android:text="Tag 1"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_11ssp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tag2"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="@color/backgroundColor"
                    android:text="Tag 2"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_11ssp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:paddingTop="@dimen/_8sdp">

                <TextView
                    android:id="@+id/tag3"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="@color/backgroundColor"
                    android:text="Tag 3"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_11ssp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tag4"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="@color/backgroundColor"
                    android:text="Tag 4"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_11ssp"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Job Description Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Job Description"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary"
        tools:ignore="HardcodedText" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_260sdp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/secondaryColor"
        android:padding="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:elevation="@dimen/_4sdp">

        <TextView
            android:id="@+id/jobDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/textColorPrimary"
            android:text="Job Description here ..."
            android:maxLines="1000"
            tools:ignore="HardcodedText" />
    </ScrollView>

    <!-- Apply Button -->
    <Button
        android:id="@+id/applyButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_16sdp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="@color/accentColor"
        android:text="Apply"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        android:gravity="center"
        tools:ignore="HardcodedText" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userProfile.UserProfile">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottomNav"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="UnknownId"
            android:background="@color/backgroundColor"
            android:scrollbars="none">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Profile Picture and Follow Info -->
                <LinearLayout
                    android:id="@+id/profileHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    tools:ignore="DisableBaselineAlignment">

                    <!-- Profile Picture Frame -->
                    <FrameLayout
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_gravity="center">

                        <!-- Story Ring (Optional) -->
                        <ImageView
                            android:id="@+id/storyRing"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/story_ring"
                            android:visibility="gone"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center"
                            tools:ignore="ContentDescription" />

                        <!-- Profile Picture -->
                        <ImageView
                            android:id="@+id/profilePicture"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:scaleType="centerCrop"
                            android:backgroundTint="@color/primaryColor"
                            android:background="@drawable/circle"
                            android:clipToOutline="true"
                            android:layout_gravity="center"
                            tools:ignore="ContentDescription,UnusedAttribute" />



                    </FrameLayout>

                    <!-- Follow Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        tools:ignore="DisableBaselineAlignment">

                        <!-- Posts Count -->
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            tools:ignore="NestedWeights">

                            <TextView
                                android:id="@+id/postsCount"
                                android:text="0"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorPrimary"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:text="Posts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="@dimen/_10sdp"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        <!-- Followers Count -->
                        <LinearLayout
                            android:id="@+id/followersLinearLayout"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/followersTextView"
                                android:text="0"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorPrimary"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:text="Followers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="@dimen/_10sdp"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        <!-- Following Count -->
                        <LinearLayout
                            android:id="@+id/followingLinearLayout"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/followingTextView"
                                android:text="0"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorPrimary"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:text="Following"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColorSecondary"
                                android:textSize="@dimen/_10sdp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/nameCredentials"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_8sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="@color/primaryColor"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:elevation="@dimen/_4sdp"
                    android:clipToOutline="true"
                    tools:ignore="RtlSymmetry,UnusedAttribute">

                    <!-- Username -->
                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Syed Muhaimen"
                        android:textStyle="bold"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/textColorPrimary"
                        android:layout_marginBottom="@dimen/_4sdp"
                        tools:ignore="HardcodedText" />

                    <!-- Bio and Rank Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Bio Section -->
                        <LinearLayout
                            android:id="@+id/bioSection"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="3"
                            android:layout_marginEnd="@dimen/_6sdp">

                            <!-- Gamer Tag -->
                            <TextView
                                android:id="@+id/gamerTag"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="mYm XEROXXX"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="italic"
                                android:textColor="@color/highlightColor"
                                android:ellipsize="end"
                                android:maxLines="1"
                                tools:ignore="HardcodedText" />

                            <!-- Bio Text -->
                            <TextView
                                android:id="@+id/bioText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="This is a sample bio..."
                                android:textColor="@color/textColorSecondary"
                                android:textSize="@dimen/_12sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                tools:ignore="HardcodedText" />

                            <!-- See More -->
                            <TextView
                                android:id="@+id/showMore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="See More"
                                android:textSize="@dimen/_12sdp"
                                android:textColor="@color/interactiveColor"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        <!-- Rank Section -->
                        <TextView
                            android:id="@+id/rankTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rank: 000000"
                            android:textStyle="bold"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/accentColor"
                            android:gravity="end"
                            android:layout_gravity="bottom|end"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:maxLines="1"
                            tools:ignore="HardcodedText" />

                        <!-- Leaderboard Button -->
                        <ImageView
                            android:id="@+id/leaderboardButton"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="bottom|end"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/ic_leaderboard_foreground"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:tint="@color/accentColor"
                            tools:ignore="ContentDescription,UseAppTint" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Settings Buttons -->
                <LinearLayout
                    android:id="@+id/settingsBoard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/primaryColor"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:elevation="@dimen/_4sdp"
                    android:clipToOutline="true"
                    android:gravity="center"
                    tools:ignore="UnusedAttribute">

                    <Button
                        android:id="@+id/requestAllianceButton"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corners"
                        android:backgroundTint="@color/softGray"
                        android:gravity="center"
                        android:text="Request Alliance"
                        android:textAlignment="center"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_9sdp"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/messageButton"
                        android:text="Message"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:textAlignment="center"
                        android:textSize="@dimen/_9sdp"
                        android:layout_weight="1"
                        android:textColor="@color/textColor"
                        android:backgroundTint="@color/softGray"
                        android:background="@drawable/rounded_corners"
                        android:layout_marginStart="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        tools:ignore="HardcodedText" />

                    <ImageButton
                        android:id="@+id/shareButton"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/share_icon_foreground"
                        android:tint="@color/textColorPrimary"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="centerInside"
                        android:adjustViewBounds="true"
                        android:layout_marginStart="@dimen/_8sdp"
                        tools:ignore="ContentDescription,UseAppTint" />

                </LinearLayout>

            <LinearLayout
                android:id="@+id/esportsProfileButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/rounded_corners"
                android:backgroundTint="@color/interactiveColor"
                android:layout_marginTop="@dimen/_10sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Esports Profile"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/textColorTernary"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

                <!-- Analytics Section -->
                <LinearLayout
                    android:id="@+id/analyticsBoard"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_12sdp"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="@color/primaryColor"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:elevation="@dimen/_4sdp"
                    android:clipToOutline="true"
                    tools:ignore="UnusedAttribute">

                    <!-- Header Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:weightSum="3"
                        android:paddingBottom="@dimen/_8sdp"
                        tools:ignore="UseCompoundDrawables">

                        <!-- Title -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.8"
                            android:text="Games Dashboard"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            android:gravity="start|center_vertical"
                            tools:ignore="HardcodedText" />

                        <!-- My Games Button -->
                        <ImageView
                            android:id="@+id/myGamesButton"
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_gravity="center"
                            android:layout_weight="0.2"
                            android:src="@drawable/ic_game_controller"
                            android:tint="@color/interactiveColor"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            tools:ignore="ContentDescription,UseAppTint" />
                    </LinearLayout>

                    <!-- RecyclerView for Analytics Data -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/analytics_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:clipToPadding="false"
                        android:scrollbars="vertical"
                        android:background="@color/transparent"
                        tools:listitem="@layout/analytics_card" />
                </LinearLayout>


                <!-- Highlights -->
                <LinearLayout
                    android:id="@+id/highlightsBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:padding="@dimen/_12sdp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="@color/primaryColor"
                    android:elevation="@dimen/_4sdp"
                    android:clipToOutline="true"
                    tools:ignore="UnusedAttribute">

                    <!-- Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Highlights"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:textColor="@color/textColorPrimary"
                        android:gravity="start"
                        tools:ignore="HardcodedText" />

                    <!-- RecyclerView for Highlights -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/highlights_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingHorizontal="@dimen/_8sdp"
                        android:clipToPadding="false"
                        android:scrollbars="horizontal"
                        android:background="@color/transparent"
                        tools:listitem="@layout/highlights_card" />
                </LinearLayout>

                <!-- Posts -->
                <LinearLayout
                    android:id="@+id/postsBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_12sdp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_corners"
                    android:backgroundTint="@color/primaryColor"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:elevation="@dimen/_4sdp"
                    android:clipToOutline="true"
                    tools:ignore="UnusedAttribute">

                    <!-- Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Posts"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:textColor="@color/textColorPrimary"
                        android:gravity="start"
                        tools:ignore="HardcodedText" />

                    <!-- RecyclerView for Posts -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/posts_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="@dimen/_8sdp"
                        android:scrollbars="vertical"
                        android:background="@color/transparent"
                        tools:listitem="@layout/posts_card" />
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>




        <!-- Bottom Navigation -->
        <LinearLayout
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_8sdp"
            android:background="@color/primaryColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="DisableBaselineAlignment">

            <LinearLayout
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@drawable/ic_navigation_home"
                    android:tint="@color/textColorPrimary"
                    tools:ignore="ContentDescription,UseAppTint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/searchButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@drawable/ic_navigation_search"
                    android:tint="@color/textColorPrimary"
                    tools:ignore="ContentDescription,UseAppTint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/addPostButton"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button_bg"
                android:elevation="@dimen/_6sdp">

                <ImageView
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_navigation_add"
                    android:tint="@color/primaryColor"
                    tools:ignore="ContentDescription,UseAppTint" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/esportsButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@drawable/ic_change_foreground"
                    android:tint="@color/textColorPrimary"
                    tools:ignore="ContentDescription,UseAppTint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Esports"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/profileButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:background="?attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:src="@drawable/ic_navigation_profile"
                    android:tint="@color/textColorPrimary"
                    tools:ignore="ContentDescription,UseAppTint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

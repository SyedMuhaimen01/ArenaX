<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:fitsSystemWindows="true"
    tools:context=".Threads.ChatActivity">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/primaryColor"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingTop="@dimen/_6sdp"
        android:paddingStart="@dimen/_12sdp"
        android:paddingEnd="@dimen/_12sdp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fitsSystemWindows="true">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/back_white2_icon_foreground"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/white"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_gravity="center_vertical"
            android:contentDescription="Back Button"
            tools:ignore="ContentDescription,HardcodedText,UseAppTint" />

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/profilePicture"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle"
            android:scaleType="centerCrop"
            android:contentDescription="Profile Picture"
            tools:ignore="ContentDescription,HardcodedText" />

        <!-- Gamer Tag -->
        <TextView
            android:id="@+id/gamerTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="Username"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- Full-Screen Media (Image or Video) -->
    <FrameLayout
        android:id="@+id/fullScreenMediaContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Full-Screen Image -->
        <ImageView
            android:id="@+id/fullSizeImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Full-Screen Image"
            tools:ignore="HardcodedText" />

        <!-- Full-Screen Video -->
        <VideoView
            android:id="@+id/fullSizeVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:ignore="HardcodedText" />
    </FrameLayout>

    <!-- Chat Messages RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/secondaryColor"
        android:paddingHorizontal="@dimen/_1sdp"
        android:paddingTop="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/primaryColor"
        android:padding="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Add Button -->
        <ImageButton
            android:id="@+id/addButton"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/add_icon_foreground"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/interactiveColor"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:contentDescription="Add Media"
            tools:ignore="ContentDescription,HardcodedText,UseAppTint" />

        <!-- Camera Button -->
        <ImageButton
            android:id="@+id/cameraButton"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_menu_camera"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/interactiveColor"
            android:contentDescription="Take Photo"
            tools:ignore="ContentDescription,HardcodedText,UseAppTint" />

        <!-- Message Input Field -->
        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/inputholder"
            android:hint="Write a message..."
            android:textColorHint="@color/hinttextColor"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/_12sdp"
            android:padding="@dimen/_10sdp"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <!-- Send Button -->
        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/send_icon_foreground"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/interactiveColor"
            android:contentDescription="Send Message"
            tools:ignore="ContentDescription,HardcodedText,UseAppTint" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
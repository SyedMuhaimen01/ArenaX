<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:backgroundTint="@color/backgroundColor"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    app:cardCornerRadius="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical"
        android:padding="@dimen/_4sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Profile picture -->
            <ImageView
                android:id="@+id/organizationLogo"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/circle"
                android:layout_marginEnd="@dimen/_10sdp"
                android:contentDescription="@string/nav_header_desc"
                android:clipToOutline="true"
                app:srcCompat="@mipmap/ic_launcher_round"
                tools:ignore="UnusedAttribute" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Name -->
                <TextView
                    android:id="@+id/jobTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Title"
                    android:textStyle="bold"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@color/textColor"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/jobTypeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Type"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/textColor"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/organizationNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organization Name"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/textColor"
                    tools:ignore="HardcodedText" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/locationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Islamabad, Pakistan"
                        android:layout_weight="1"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/hinttextColor"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/workplaceTypeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="On-site"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/hinttextColor"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tag1"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:background="@drawable/searchbar"
                    android:backgroundTint="@color/accentColor"
                    android:maxLength="15"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_11ssp"
                    tools:ignore="Autofill,HardcodedText,LabelFor,TextFields" />
                <TextView
                    android:id="@+id/tag2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_17sdp"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:textSize="@dimen/_11ssp"
                    android:maxLength="15"
                    android:backgroundTint="@color/accentColor"
                    android:background="@drawable/searchbar"
                    android:textColor="@color/white"
                    tools:ignore="Autofill,HardcodedText,LabelFor,TextFields" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_gravity="start"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tag3"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:textSize="@dimen/_11ssp"
                    android:maxLength="15"
                    android:gravity="center"
                    android:background="@drawable/searchbar"
                    android:backgroundTint="@color/accentColor"
                    android:textColor="@color/white"
                    tools:ignore="Autofill,HardcodedText,LabelFor,TextFields" />
                <TextView
                    android:id="@+id/tag4"
                    android:layout_marginEnd="@dimen/_17sdp"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:textSize="@dimen/_11ssp"
                    android:maxLength="15"
                    android:gravity="center"
                    android:background="@drawable/searchbar"
                    android:backgroundTint="@color/accentColor"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    tools:ignore="Autofill,HardcodedText,LabelFor,TextFields" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".esportsManagement.talentExchange.EmployeesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessLeaf,UselessParent">

        <!-- Recruit For Label and Drop-Down -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordered_background"
            android:backgroundTint="@color/secondaryColor"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:orientation="vertical"
            android:paddingTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/recruitForLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recruit For"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:paddingBottom="@dimen/_5sdp"
                tools:ignore="HardcodedText" />

            <Spinner
                android:id="@+id/recruitForSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:popupBackground="@color/primaryColor"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/searchbar"
            android:orientation="horizontal"
            android:weightSum="4">

            <AutoCompleteTextView
                android:id="@+id/searchbar"
                android:layout_width="0dp"
                android:layout_weight="3.9"
                android:layout_height="@dimen/_33sdp"
                android:hint="Search ..."
                android:textColorHint="@color/hinttextColor"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/_13sdp"
                android:background="@drawable/searchbar_input_background"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:gravity="center_vertical"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/searchicon_foreground"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/interactiveColor"
                android:contentDescription="Search Icon"
                android:layout_weight="0.1"
                tools:ignore="HardcodedText,UseAppTint" />
        </LinearLayout>

        <!-- Tags RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tags_recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:backgroundTint="@color/backgroundColor"
            android:visibility="gone" />

        <!-- Employees RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/employees_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:visibility="visible"
            android:background="@color/secondaryColor"
            android:paddingTop="@dimen/_6sdp"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

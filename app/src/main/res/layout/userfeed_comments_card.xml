<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <!-- This is the TextView for displaying comments -->
    <TextView
        android:id="@+id/textViewComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:maxLines="5"
        android:ellipsize="end"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />

    <!-- This is the EditText for writing a new comment -->
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/editTextComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write a comment..."
        android:layout_marginEnd="8dp"
        android:paddingStart="@dimen/_4sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_marginStart="8dp"
        android:background="@drawable/searchbar"
        android:maxLines="5"
        android:inputType="textMultiLine"
        android:visibility="visible"
        tools:ignore="MissingConstraints" />  <!-- Hidden by default -->

    <!-- This is the Button for posting the comment -->
    <Button
        android:id="@+id/buttonPostComment"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@mipmap/send_icon"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintRight_toRightOf="@+id/editTextComment" />

    <!-- See More link styled as a clickable text -->
    <TextView
        android:id="@+id/seeMoreLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See more"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="16sp"
        android:visibility="gone"
        android:gravity="right"
        android:layout_marginTop="18dp"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintRight_toRightOf="@+id/textViewComment"
        android:layout_below="@id/textViewComment"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>
